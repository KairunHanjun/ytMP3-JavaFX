<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" fillWidth="false" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.iseng.binarytree.PrimaryController">
   <children>
      <AnchorPane>
         <children>
            <Label layoutX="4.0" text="Insert value:" />
            <Button fx:id="primaryButton" layoutY="74.0" onAction="#switchToSecondary" prefHeight="25.0" prefWidth="204.0" text="Go to Youtube Downloader" />
            <Button fx:id="ADDBINARY" layoutY="44.0" mnemonicParsing="false" onAction="#addBinaryTree" prefHeight="25.0" prefWidth="55.0" text="ADD" />
            <Button layoutX="60.0" layoutY="44.0" mnemonicParsing="false" onAction="#showTree" text="SHOW TREE" />
            <TextField fx:id="BinaryTreeInput" layoutY="17.0" onKeyPressed="#onEnterPressed" prefHeight="25.0" prefWidth="204.0" />
            <Button layoutX="144.0" layoutY="44.0" mnemonicParsing="false" onAction="#searchBinaryTree" text="SEARCH" />
         </children>
      </AnchorPane>
      <ScrollPane fx:id="ShowTree" disable="true" maxHeight="200.0" visible="false">
         <content>
            <VBox fx:id="ShowData" disable="true" visible="false" />
         </content>
      </ScrollPane>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
